{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "preserve",

        "noEmit": false,
        "declaration": true,
        "emitDeclarationOnly": true,

        "isolatedModules": false,

        "strict": true,
        "esModuleInterop": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
